<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag '/images/logo-instagram.png' %>
    <%# <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous"> %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%# Navigation Bar %>
      <nav class="navbar navbar-light bg-light d-flex">
      <div class="container">
        <div class="logo">
          <a class="navbar-brand" href="<%= root_path%>">
            <i class="fa fa-instagram"></i>
            Instagram
          </a>
        </div>
        <div class="m-auto">
          <%= form_with url: search_index_path, method: :get, local: true, class: 'form-inline search-form' do |form| %>
            <%= form.text_field :query, value: params[:query], class: 'form-control mr-sm-2', placeholder: '#search' %>
          <% end %>
        </div>
        <div class="user-section">
           <% if user_signed_in? %>
              <a class="avatar-nav" href = "<%= user_path(current_user)%>"><%= image_tag current_user.avatar_url.to_s%></a>
           <% end %>
          <a><i class="fa fa-compass"></i></a>
          <a><i class="fa fa-heart"></i></a>
          <% if user_signed_in?%>
             <a href="<%= user_path(current_user)%>">
                <i class="fa fa-user"></i>
              </a>
              <a href="<%= destroy_user_session_path%>" data-method = "delete">
                <i class="fa fa-sign-out"></i>
              </a>
          <% else %>
              <a href="<%= new_user_session_path%>">
                <i class="fa fa-sign-in"></i>
              </a>
          <% end %>
          
        </div>
      </div>
    </nav>
  <%# Notice %>
  <div class="notification">
      <%= render 'layouts/alert'%>
  </div>

  <%# main %>
    <main class="container" style="min-height: 500px;">
         <%= yield %>
    </main>

  <%# footer %>
<div></div>

  <div class="main-footer">
      <footer class="container footer">
      <nav class="navbar d-flex">
        <ul>
          <li><a href='#'>ABOUT US</a></li>
          <li><a href='#'>SUPPORT</a></li>
          <li><a href='#'>PRESS</a></li>
          <li><a href='#'>API</a></li>
          <li><a href='#'>JOBS</a></li>
          <li><a href='#'>PRIVACY</a></li>
          <li><a href='#'>TERMS</a></li>
          <li><a href='#'>DIRECTORY</a></li>
          <li><a href='#'>PROFILES</a></li>
          <li><a href='#'>HASHTAGS</a></li>
          <li><a href='#'>LANGUAGE</a></li>
        </ul>
        <p> Â© 2018 INSTAGRAM </p>
      </nav>
    </footer>
  </div>
  </body>
</html>
