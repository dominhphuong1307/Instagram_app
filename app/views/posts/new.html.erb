
<% if user_signed_in? %>
<div class="container">

<div class="row">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          <%= form_for Post.new do |f| %>
        <div class="form-group">
        <%= f.text_field :description %>
      </div>
      <div class="form-group">
          <%= f.file_field :image %>
      </div>
      <div class="form-group">
          <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
      </div>
      <br>
      <div class="form-group">
          <%= f.submit 'Create Post', class: 'btn btn-primary' %>
      </div>
      <% end %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
</div>


<% end %>
