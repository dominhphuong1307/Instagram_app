
<% if user_signed_in? %>
<div class="container">

<div class="row">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">

    <%= form_for @post do |f| %>
        <div class="form-group">
        Edit description: 
        <%= f.text_field :description %>
      </div>
      <div class="form-group">
          <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
      </div>
      <br>
      <div class="form-group">
          <%= f.submit %>
      </div>
      <% end %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
</div>

<% end %>
